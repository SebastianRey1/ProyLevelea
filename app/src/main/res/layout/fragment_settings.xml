<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.proy.jsdv.proylevelea.menu.SettingsFragment">


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opportunity State"
        android:id="@+id/oppSta"
        android:checked="false"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="127dp"
        android:height="50dp"
        android:textSize="20sp"
        android:switchMinWidth="50sp"
        android:switchPadding="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:id="@+id/btnEditProfile"
        android:
        android:textSize="15sp"
        android:layout_below="@+id/oppSta"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:id="@+id/btnLogout"
        android:textSize="15sp"
        android:layout_below="@+id/btnEditProfile"
        android:layout_alignStart="@+id/aboutApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/aboutApp"
        android:textSize="15sp"
        android:layout_below="@+id/btnLogout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
