<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/primaryColor" />
            <gradient android:angle="-90" android:startColor="@color/white" android:endColor="@color/abc_background_cache_hint_selector_material_dark"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/white" />
            <solid android:color="@color/primaryColor"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/white" />
            <gradient android:angle="-90" android:startColor="@color/primaryColor" android:endColor="@color/primaryDarkColor" />
        </shape>
    </item>
</selector>